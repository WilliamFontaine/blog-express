<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New product</title>
    <%- include('../../partials/init'); %>
    <link rel="stylesheet" href="/css/buttons.css" type="text/css">
    <link rel="stylesheet" href="/css/new-product.css" type="text/css">
</head>
<%- include('../../partials/header'); %>
<body>
<div class="new-product">

    <form method="post" action="/products/new">
        <div class="title">
            <h1>New product</h1>
        </div>
        <div class="input-group title">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" required>
        </div>
        <div class="input-group image">
            <label for="image">Image</label>
            <input type="text" name="image" id="image" required>
        </div>
        <div class="input-group description">
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10" required></textarea>
        </div>
        <div class="input-group category">
            <label for="category">Category</label>
            <input type="text" name="category" id="category" required>
        </div>
        <div class="input-group price">
            <label for="price">Price (â‚¬)</label>
            <input type="number" step="0.01" name="price" id="price">
        </div>
        <div class="buttons">
            <button class="button confirm-button" type="submit">Create</button>
            <a class="button info-button" href="/products">Return to the list</a>
        </div>
    </form>
</div>
</body>
</html>